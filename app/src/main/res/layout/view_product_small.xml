<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:foreground="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_thumbnail"
        tools:src="@drawable/ic_photo_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/text_product_title"
        tools:text="Very very very very very very very very very long text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/image_thumbnail"
        android:layout_toEndOf="@+id/image_thumbnail"
        />

    <TextView
        android:id="@+id/text_product_description"
        tools:text="Very very very very very very very very very long text\nVery very very very very very very very very long text\nVery very very very very very very very very long text\nVery very very very very very very very very long text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_product_title"
        android:layout_alignStart="@+id/text_product_title"
        android:layout_below="@+id/text_product_title"
        android:layout_alignBottom="@+id/image_thumbnail"
        android:paddingTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-light"
        tools:targetApi="jelly_bean" />

    <TextView
        android:id="@+id/text_product_upvotes"
        tools:text="42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_thumbnail"
        android:layout_alignStart="@id/image_thumbnail"
        android:layout_alignLeft="@+id/image_thumbnail"
        android:drawableStart="@drawable/ic_thumb_up_black_18dp"
        android:drawableLeft="@drawable/ic_thumb_up_black_18dp"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        />

    <View
        android:id="@+id/view_line"
        android:layout_below="@+id/text_product_upvotes"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
</RelativeLayout>